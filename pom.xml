        <!-- https://mvnrepository.com/artifact/com.aallam.openai/openai-client-bom -->
        <dependency>
            <groupId>com.aallam.openai</groupId>
            <artifactId>openai-client-bom</artifactId>
            <version>3.4.0</version>
            <type>pom</type>
        </dependency>
        <!-- https://mvnrepository.com/artifact/io.ktor/ktor-client-okhttp -->
